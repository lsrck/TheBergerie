<h1>Publier un article</h1>
<%= form_for(@post, html: {class: "post-form"}) do |f| %>
  <%= render 'layouts/error_messages' %>

  <%= f.fields_for :categories do |category_form| %>
      <%= category_form.label :Catégorie %>
      <%= category_form.text_field :name %>
  <% end %>
    
  <%= f.label :titre %>
  <%= f.text_field :title %>

  <%= f.label :preview %>
  <%= f.text_field :preview %>

  <%= f.label :contenu %>
  <%= f.text_field :content %>
    
  <%= f.submit "Créer mon article", class: "btn btn-primary" %>
<% end %>